<!-- res/layout/dialog_playing_audio.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_input"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="50dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/kotakan"
        android:layout_gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_input">
            <LinearLayout
                android:padding="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Konfirmasi Hapus"
                    android:textSize="20sp"
                    android:textColor="@color/dalam_kotak"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Apakah anda yakin ingin menghapus kosakata ini ?"
                    android:textSize="17sp"
                    android:textColor="@color/dalam_kotak"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnBatal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="BATAL"
                        android:layout_marginEnd="30dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/kotakan"
                        android:fontFamily="@font/roboto_bold"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/btnHapus"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:text="HAPUS"
                        android:textColor="@color/kotakan"
                        android:textSize="16sp"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
