<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_input"
                android:layout_width="379dp"
                android:layout_height="464dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/kotakan"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_input">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/login_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Register Admin"
                                android:gravity="center"
                                android:fontFamily="@font/inter_bold"
                                android:textColor="@color/dalam_kotak"
                                android:textSize="32sp"/>

                            <TextView
                                android:id="@+id/login_title2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="E-Learning Bahasa Madura"
                                android:gravity="center"
                                android:fontFamily="@font/sourceserif_semibold"
                                android:textColor="@color/dalam_kotak"
                                android:textSize="24sp"/>

                            <View
                                android:layout_width="302dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="#B3B3B3"
                                android:layout_marginBottom="32dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="351dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Email"
                                android:fontFamily="@font/inter"
                                android:textSize="20sp"
                                android:textColor="@color/dalam_kotak"
                                android:layout_marginBottom="12dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="351dp"
                                android:layout_height="61.32dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                android:layout_marginBottom="20dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/kotakan"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:padding="2dp">

                                    <EditText
                                        android:id="@+id/emailregister"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/rounded_input"
                                        android:textColor="@color/dalam_kotak"
                                        android:textSize="20sp"
                                        android:inputType="textMultiLine"
                                        android:maxLines="5"
                                        android:scrollbars="vertical"
                                        android:hint="Masukkan Email Anda"
                                        android:paddingStart="5dp">
                                    </EditText>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Password"
                                android:fontFamily="@font/inter"
                                android:textSize="20sp"
                                android:textColor="@color/dalam_kotak"
                                android:layout_marginBottom="12dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="351dp"
                                android:layout_height="61.32dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="8dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/kotakan"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:padding="2dp">

                                    <EditText
                                        android:id="@+id/passwordregister"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/rounded_input"
                                        android:textColor="@color/dalam_kotak"
                                        android:textSize="20sp"
                                        android:inputType="textMultiLine"
                                        android:maxLines="5"
                                        android:scrollbars="vertical"
                                        android:hint="Masukkan Password Anda"
                                        android:paddingStart="5dp">
                                    </EditText>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sudah menjadi admin?"
                                    android:textColor="@color/dalam_kotak"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/linkadmin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Login"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:paddingLeft="2dp"
                                    android:textColor="#007AFF"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="351dp"
                            android:layout_height="46.94dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/kotakan"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="8dp">

                            <Button
                                android:id="@+id/btnregister"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/kotakan"
                                android:text="Register"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                android:gravity="center" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>