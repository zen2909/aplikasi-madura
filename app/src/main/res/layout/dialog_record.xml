<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="50dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/kotakan"
        android:layout_gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_input">
<LinearLayout
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Rekam Suara Pelafalan..."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="Durasi: 0s"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnHoldToRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tahan Untuk Rekam"
        android:textSize="16dp"
        android:backgroundTint="@color/kotakan"
        android:textColor="@color/dalam_kotak"/>
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>