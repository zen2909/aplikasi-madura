<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/kotakan"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/inputterjemahan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Terjemahan"
                android:textColor="@color/dalam_kotak"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_marginStart="49dp"
            app:cardBackgroundColor="@color/kotakan"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/inputtb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Tingkat\nBahasa"
                android:textColor="@color/dalam_kotak"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_input"
                android:layout_width="379dp"
                android:layout_height="501dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/kotakan"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_input">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/login_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="FORM INPUT SOAL\nEVALUASI"
                                android:gravity="center"
                                android:fontFamily="@font/inter_bold"
                                android:textColor="@color/dalam_kotak"
                                android:textSize="32sp"/>

                            <TextView
                                android:id="@+id/login_title2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Evaluasi Pelafalan"
                                android:gravity="center"
                                android:fontFamily="@font/sourceserif_semibold"
                                android:textColor="@color/dalam_kotak"
                                android:textSize="24sp"/>

                            <View
                                android:layout_width="302dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="@color/kotakan"
                                android:layout_marginBottom="32dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="351dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Soal"
                                android:fontFamily="@font/inter"
                                android:textSize="20sp"
                                android:textColor="@color/dalam_kotak"
                                android:layout_marginBottom="12dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="351dp"
                                android:layout_height="61.32dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                android:layout_marginBottom="20dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/kotakan"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:padding="2dp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/rounded_input"
                                        android:textColor="@color/dalam_kotak"
                                        android:textSize="20sp"
                                        android:inputType="textMultiLine"
                                        android:maxLines="5"
                                        android:scrollbars="vertical"
                                        android:paddingStart="5dp">
                                    </EditText>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Jawaban"
                                android:fontFamily="@font/inter"
                                android:textSize="20sp"
                                android:textColor="@color/dalam_kotak"
                                android:layout_marginBottom="12dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="351dp"
                                android:layout_height="61.32dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="8dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/kotakan"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:padding="2dp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/rounded_input"
                                        android:textColor="@color/dalam_kotak"
                                        android:textSize="20sp"
                                        android:inputType="textMultiLine"
                                        android:maxLines="5"
                                        android:scrollbars="vertical"
                                        android:paddingStart="5dp">
                                    </EditText>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="@color/kotakan"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="8dp">

                            <Button
                                android:id="@+id/ic_send"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/kotakan"
                                android:text="Simpan"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="32sp"
                                android:gravity="center" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/kotakan"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/menuShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inputkosakata"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_input_madura"
                android:tint="@color/dalam_kotak" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inputeval"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_input_eval"
                android:tint="@color/dalam_kotak" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDatabase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listkosakata"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_list_madura"
                android:tint="@color/dalam_kotak" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listsoaleval"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_list_eval"
                android:tint="@color/dalam_kotak" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>